<div class="container-list">
  <h1 class="list-text">New List</h1>
  <%= simple_form_for @list, url: new_list_path, remote: true do |form| %>
    <div class="field">
      <%= form.input :name %>
    </div>

    <div class="field">
      <%= form.input :budget, label: "Budget" %>
    </div>

    <div class="field">
      <%= form.input :tag_id, label: "Tag", collection: Tag.all %>
    </div>

    <div class="actions new-btn">
      <%= form.submit %>
    </div>
  <% end %>
</div>
<% if @list.errors.any? %>
  <% end %>
