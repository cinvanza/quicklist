<div class="add-container">
  <a href="<%= new_list_path %>" class="btn btn-primary add-list-button d-flex justify-content-center align-items-center">
    <i class="fas fa-plus"></i> Add List
  </a>

  <div class="my-lists-container">
    <h1><strong>My Lists</strong></h1>
    <div class="recomended-lists-container">
      <h1><strong>Recommended Lists</strong></h1>
      <ul class="list">
        <% @lists.each do |list| %>
          <li class="list-item">
            <div class="list-info">
              <h5 class="list-title"><strong><%= list.name %></strong></h5>
              <% if list.products.count > 2 %>
                <p class="text-muted mb-0"><small><%= list.products.count %> products</small></p>
              <% end %>
            </div>
            <a href="<%= list_path(list) %>" class="btn btn-primary">
              <i class="fa-solid fa-arrow-right"></i>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
