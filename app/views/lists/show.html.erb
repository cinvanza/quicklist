<div class="container">
  <h1><strong><%= @list.name %></strong></h1>

  <div class="row row-cols-1 row-cols-md-2 g-2">
    <% @list.products.each do |item| %>
      <div class="col">
        <div class="card shadow-sm">  <div class="card-body">
            <h5 class="card-title"><strong><%= item.name %></strong></h5>
            <p class="card-text">Brand: <%= item.brand %></p>
            <p class="card-text">Price: <%= item.price %></p>
            <p class="card-text">Quantity: <%= item.quantity %></p>
            <div class="d-flex justify-content-between">
              <%= link_to 'Edit item', edit_list_product_path(@list, item), class: "btn btn-sm btn-outline-primary" %>
              <%= button_to 'Delete item', list_product_path(@list, item), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-3 d-flex justify-content-between">
    <%= link_to 'Back', lists_path, class: "btn btn-primary" %>
    <%= link_to 'Add Product', new_list_product_path(list_id: @list.id), class: "btn btn-primary" %>
  </div>

  <%= render 'shared/search_user' %>
</div>
  <!--Modal Trigger button-->
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Add Review</button>
  <!--Modal-->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Rate this list</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= simple_form_for [@list, @review], url: list_reviews_path(@list) do |f| %>
            <%= f.input :comment, label: 'Comment:' %>
            <%= f.input :rating, collection: (1..5).to_a, label: "Rate this list", input_html: {data: {controller: "star-rating"}} %>
          <div class="d-grid gap-2 d-md-block">
            <%= f.button :submit, "Post Review", class: 'btn btn-primary'%>
          </div>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
</div>
