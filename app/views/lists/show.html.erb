<div class="container">

<div class="card text-center mb-3">
  <img src="..." class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"><%= @list.name %></h5>
    <p class="card-text" data-controller="star-rating"><%= @list.average_rating%></p>
    <%= link_to 'View Reviews', list_reviews_path(@list),  class:"btn btn-primary"%>
  </div>
</div>

<ul>
  <% @list.products.each do |item| %>
  <li>
    <p><%= item.name %></p>
    <p><%= item.brand %></p>
    <p><%= item.price %></p>
    <p><%= item.quantity %></p>
    <%= link_to 'Edit item', edit_list_product_path(@list, item) %>
    <%= button_to 'Delete item', list_product_path(@list, item), method: :delete, data: { turbo_confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>
<%= link_to 'Back', lists_path %>
<%= link_to 'Add Product', new_list_product_path(list_id: @list.id) %>

<%= render 'shared/search_user' %>
</div>
