<% if notice %>
  <div class="alert alert-info alert-dismissible fade show m-1 position-fixed top-90 start-50 translate-middle-x" role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<% if alert %>
  <div class="alert alert-warning alert-dismissible fade show m-1 position-fixed top-90 start-50 translate-middle-x" role="alert">
    <%= alert %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
