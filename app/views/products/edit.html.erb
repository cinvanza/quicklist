<h1>Edit Product</h1>

<div class="container">
  <div class="card shadow-sm">
    <div class="card-body">
      <%= simple_form_for [@list, @product] do |f| %>
        <div class="mb-3">
          <%= f.input :name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.input :price, class: "form-control" %>
        </div>
        <div class="d-flex justify-content-end">
          <%= link_to 'Back', list_path(@list), class: "btn btn-secondary me-auto" %>
          <%= f.button :submit, "Update Product", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
